<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">

    <transition name="createParty">
        <service-call name="org.moqui.party.PartyServices.create#Party"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="party.Party" list="partyList">
            <search-form-inputs/>
        </entity-find>

        <entity-find entity-name="party.Person" list="personList">
            <search-form-inputs/>
        </entity-find>

        <entity-find entity-name="party.PartyGroup" list="partyGroupList">
            <search-form-inputs/>
        </entity-find>

        <entity-find entity-name="party.ContactMech" list="contactMechList">
            <search-form-inputs/>
        </entity-find>

        <entity-find entity-name="party.PartyContactMech" list="partyContactMechList">
            <search-form-inputs/>
        </entity-find>

    </actions>

    <widgets>

        <container-dialog id="CreatePartyDialog" button-text="Create Party">

            <form-single name="CreateParty" transition="createParty">
                <!--        Created dropdown of Party Type -->
                <field name="partyTypeEnumId" >
                    <default-field >
                        <drop-down>
                            <option key="PERSON" />
                            <option key="PARTY_GROUP" />
                        </drop-down>
                    </default-field>
                </field>

                <field name="submitButton">
                    <default-field title="Create">
                        <submit/>
                    </default-field>
                </field>
            </form-single>
        </container-dialog>

        <label type="h1" text="Party List"/>
        <form-list name="ListParties" list="partyList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="party.Party" field-type="find-display"/>
        </form-list>

        <label type="h1" text="Person List"/>
        <form-list name="ListPersons" list="personList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="party.Person" field-type="find-display"/>
        </form-list>

        <label type="h1" text="PartyGroup List"/>
        <form-list name="ListPartyGroups" list="partyGroupList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="party.PartyGroup" field-type="find-display"/>
        </form-list>

        <label type="h1" text="ContactMech List"/>
        <form-list name="ListContactMechs" list="contactMechList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="party.ContactMech" field-type="find-display"/>
        </form-list>

        <label type="h1" text="PartyContactMech List"/>
        <form-list name="ListPartyContactMechs" list="partyContactMechList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="party.PartyContactMech" field-type="find-display"/>
        </form-list>

    </widgets>
</screen>

